<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.khelkund.privateleague" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.PrivateLeagueHomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.PrivateLeagueDetailsActivity"
            android:label="@string/title_activity_private_league_details"
            android:parentActivityName=".activities.PrivateLeagueHomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.PrivateLeagueHomeActivity" />
        </activity>
        <activity
            android:name=".activities.CreatePrivateLeagueActivity"
            android:label="@string/title_activity_create_private_league"
            android:parentActivityName=".activities.PrivateLeagueHomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.PrivateLeagueHomeActivity" />
        </activity>
        <activity
            android:name=".activities.JoinPrivateLeagueActivity"
            android:label="@string/title_activity_join_private_league"
            android:parentActivityName=".activities.PrivateLeagueHomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.PrivateLeagueHomeActivity" />
        </activity>
    </application>

</manifest>
