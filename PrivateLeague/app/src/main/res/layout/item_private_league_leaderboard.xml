<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_leaderboard_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/logo"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/item_leaderboard_username"
        android:layout_alignTop="@+id/item_leaderboard_logo"
        android:layout_toRightOf="@+id/item_leaderboard_logo"
        android:layout_toEndOf="@+id/item_leaderboard_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/item_leaderboard_teamname"
        android:layout_below="@+id/item_leaderboard_username"
        android:layout_toRightOf="@+id/item_leaderboard_logo"
        android:layout_toEndOf="@+id/item_leaderboard_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1"
        android:id="@+id/item_leaderboard_rank"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/item_leaderboard_logo"
        android:textColor="#BDBDBD"
        android:textSize="75dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="12.12"
        android:id="@+id/item_leaderboard_points"
        android:layout_alignTop="@+id/item_leaderboard_teamname"
        android:layout_toLeftOf="@+id/item_leaderboard_rank"
        android:layout_toStartOf="@+id/item_leaderboard_rank"
        android:layout_marginRight="20dp"
        android:textColor="@color/primary"
        android:textSize="30dp" />
</RelativeLayout>